---
import { getPosts } from "../posts.ts";
import SiteLayout from "../layouts/SiteLayout.astro";
import Main from "../components/Main.astro";
import Tag from "../components/Tag.astro";

const posts = await getPosts();
---

<SiteLayout>
  <Main>
    <div class="mb-4 border-b border-slate-300 dark:border-slate-700 mb-8 pb-8">
      <p class="mb-4">Hi, I'm <b>Elliot Winkler</b>.</p>
      <p class="mb-4">
        I've been working in the web space for {new Date().getFullYear() - 2007}
        years at various product companies and consultancies.
      </p>
      <p class="mb-6">
        I currently work as a staff engineer at <a
          href="https://metamask.io"
          class="link"
          target="_blank">MetaMask</a
        >, the leading web3 wallet, building foundational libraries that power
        our core experiences for 40 million users.
      </p>
      <ul class="flex flex-row gap-2 justify-center">
        <li class="after:content-['•'] after:pl-1">
          <a href="https://github.com/mcmire" class="link" target="_blank"
            >GitHub</a
          >
        </li>
        <li class="after:content-['•'] after:pl-1">
          <a
            href="https://www.linkedin.com/in/elliot-winkler/"
            class="link"
            target="_blank">LinkedIn</a
          >
        </li>
        <li>
          <a href="https://twitter.com/mcmire" class="link" target="_blank"
            >Twitter</a
          >
        </li>
      </ul>
    </div>
    <nav>
      {
        posts.map((post) => (
          <div class="flex w-full justify-between mb-4 flex-row gap-4 mb-2">
            <span>
              {post.collection === "sample-posts" ? (
                <Tag class="mr-2">sample</Tag>
              ) : null}
              <a href={`/posts/${post.slug}`} class="font-semibold link">
                {post.data.title}
              </a>
            </span>
            <span class="flex-none text-slate-500">
              {post.data.publishDate.toLocaleDateString(undefined, {
                year: "numeric",
                month: "short",
                day: "numeric",
                timeZone: "UTC",
              })}
            </span>
          </div>
        ))
      }
    </nav>
  </Main>
</SiteLayout>
